<% layout("./layouts/boilerplate") %>


<h3>All Listing</h3>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-3 row-cols-xl-4 g-4">
    <% for(let listing of alllistings) { %>
      <a href="/listings/<%=listing.id%>" class="listing-link" >
    <div class="col">
      <div class="card h-100 listing-card" >
        <img class="card-img-top" src="<%= listing.image %>" alt="listing image" style="height: 200px; object-fit: cover;"/>
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br/>
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div>
    </div>
      </a>
    <% } %>
  </div>
</div>
